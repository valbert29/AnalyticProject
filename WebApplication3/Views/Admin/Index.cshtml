@model IEnumerable<VSZANAL.Models.User>
@{
    ViewData["Title"] = "AllUsers";
}

<h2>AllUsers</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="AllUsers"  asp-route-sortOrder="@ViewBag.TimeSort">
                    Id
                </a>
            </th>
            <th>
                <a asp-action="AllUsers" asp-route-sortOrder="@ViewBag.NameSort">
                    Name
                </a>
            </th>
            <th>
                <p asp-action="AllUsers">
                    Files
                </p>
            </th>
            <th>
                <p asp-action="AllUsers">
                    Login
                </p>
            </th>
            <th>
                <p asp-action="AllUsers">
                    Role
                </p>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            //if (item.UserId == ViewBag.login)
            //{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Files</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
            </tr>
            //}

        }
    </tbody>
</table>