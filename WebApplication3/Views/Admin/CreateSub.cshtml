@model VSZANAL.Models.Subscription

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>UserFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSub" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <p>
                    <select id="Name" name="Name" required>
                        <option>GetAverageValue</option>
                        <option>GetExpectedValue</option>
                        <option>GetDispersion</option>
                        <option>GetSquareDeviation</option>
                    </select>
                </p>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Period" class="control-label">Period</label>
                <input type="date" id="Period" class="form-control" name="Period"/>
            </div>
            <input type="text" hidden value="@ViewBag.Id" name="userId"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Subscriptions" asp-route-id="@ViewBag.Id">Back to List</a>
</div>

